
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Detail:</strong>

  <%=raw @article.detail %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>


<h2>Comment</h2>
<table id="tab">
  <thead> <tr>
    <th>Detail</th>
    <th>User ID</th>
  </tr>
  </thead>
  <tbody>
  <% @article.comments.each do |comment| %>
      <tr>
        <td><%= raw comment.comment_detail %></td>
        <td><%= comment.user_id %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br/>
<h2>Comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :comment_detail %>
      <br/>
      <%= f.text_field :comment_detail %>
    </div>
    <div class="field">
      <%= f.label :article_id %>
      <br/>
      <%= f.text_field :article_id, :disabled => true %>

    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
